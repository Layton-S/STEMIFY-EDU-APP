@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Your main layout file
}

<div class="d-flex">

    <!-- Main Content -->
    <div class="flex-grow-1 p-4">
        <!-- Header -->


        <!-- Welcome -->
        <div class="bg-light p-3 rounded mb-4">
            <h3>Welcome, John Doe</h3>
            <p>Popular Courses:</p>
            <div class="d-flex gap-3">
                <div class="card" style="width: 100px;">
                    <div class="card-body p-2 text-center">SVW115</div>
                </div>
                <div class="card" style="width: 100px;">
                    <div class="card-body p-2 text-center">SVW118</div>
                </div>
                <div class="card" style="width: 100px;">
                    <div class="card-body p-2 text-center">SVW113</div>
                </div>
                <a href="#" class="btn btn-success align-self-center">View Courses</a>
            </div>
        </div>

        <!-- Stats -->
        <div class="row mb-4">
            @{
                string[] labels = { "STUDENTS", "COURSES", "LECTURES", "QUIZZES", "PRACTICALS" };
                foreach(var label in labels)
                {
                    <div class="col-md-2">
                        <div class="card text-white bg-success mb-3">
                            <div class="card-body">
                                <h6 class="card-title">12345 @label</h6>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Course Performance Chart Placeholder -->
        <div class="bg-white p-4 rounded shadow-sm mb-4">
            <h4>Course Performance</h4>
            <p>(Placeholder for chart library, e.g., Chart.js)</p>
            <div class="row">
                <div class="col-md-6">Agriculture - Bar Chart</div>
                <div class="col-md-6">History - Bar Chart</div>
            </div>
        </div>

        <!-- Calendar and Schedule -->
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">March 2025</h5>
                        <!-- Static calendar for now -->
                        <p>[Calendar widget here]</p>
                    </div>
                </div>
                <div class="d-flex flex-column">
                    <button class="btn btn-outline-success mb-2">Settings</button>
                    <button class="btn btn-outline-primary mb-2">Clear Schedule</button>
                    <button class="btn btn-outline-warning">Schedule Alert</button>
                </div>
            </div>

            <!-- Contact Users -->
            <div class="col-md-8">
                <h5>Contact Users</h5>
                <div class="d-flex flex-wrap gap-2">
                    @for(int i = 0; i < 5; i++)
                    {
                        <img src="https://via.placeholder.com/40" class="rounded-circle" />
                    }
                    <span class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">20+</span>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
