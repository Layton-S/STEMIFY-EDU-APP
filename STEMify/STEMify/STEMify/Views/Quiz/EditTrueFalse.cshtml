@model STEMify.Models.TrueFalseQuestion

<h4>TrueFalseQuestion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTrueFalse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="QuizQuestionId" class="control-label"></label>
                <input asp-for="QuizQuestionId" class="form-control" />
                <span asp-validation-for="QuizQuestionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatementText" class="control-label"></label>
                <input asp-for="StatementText" class="form-control" />
                <span asp-validation-for="StatementText" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Answer" /> @Html.DisplayNameFor(model => model.Answer)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Questions">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
