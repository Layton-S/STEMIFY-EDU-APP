@model STEMify.Models.FillInTheBlankQuestion

<div id="fill-in-the-blank">
    @Html.HiddenFor(model => model.QuizQuestionId)

    <div class="form-group">
        @Html.LabelFor(model => model.StatementText, htmlAttributes: new { @class = "control-label" })
        @Html.TextAreaFor(model => model.StatementText, new { @class = "form-control", rows = 3 })
        @Html.ValidationMessageFor(model => model.StatementText, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CorrectAnswer, "Expected Answer", htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.CorrectAnswer, new { @class = "form-control", name = "Answer" })
        @Html.ValidationMessageFor(model => model.CorrectAnswer, "", new { @class = "text-danger" })
    </div>
</div>
