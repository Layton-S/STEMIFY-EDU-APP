@{
    ViewData["Title"] = "Assign Role";
    var users = ViewBag.Users as List<Microsoft.AspNetCore.Identity.IdentityUser>;
    var roles = ViewBag.Roles as List<Microsoft.AspNetCore.Identity.IdentityRole>;
}

<h2>Assign Role to User</h2>

<form asp-action="Assign" method="post">
    <div class="form-group">
        <label>User</label>
        <select name="userId" class="form-control">
            @foreach(var user in users)
            {
                <option value="@user.Id">@user.UserName</option>
            }
        </select>
    </div>

    <div class="form-group mt-2">
        <label>Role</label>
        <select name="roleName" class="form-control">
            @foreach(var role in roles)
            {
                <option value="@role.Name">@role.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Assign Role</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
</form>
