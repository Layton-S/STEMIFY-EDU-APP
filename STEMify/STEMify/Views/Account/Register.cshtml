@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - STEMify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body, html {
            height: 100%;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            display: flex;
            height: 100vh;
        }

        .login-left {
            flex: 1;
            background: linear-gradient(to right, #0f9d58, #34a853);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            text-align: center;
        }

            .login-left blockquote {
                font-size: 1.2rem;
                font-style: italic;
                line-height: 1.6;
            }

        .login-right {
            flex: 1;
            background: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .login-form {
            max-width: 500px;
            width: 100%;
        }

        .form-control::placeholder {
            color: #bbb;
        }

        .btn-success {
            background-color: #34a853;
            border-color: #34a853;
        }

        .btn-outline-secondary {
            background-color: white;
            box-shadow: 0 0.1rem 0.5rem rgba(0,0,0,0.1);
        }

        .quote-icon {
            font-size: 2rem;
            display: block;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Left Section -->
        <div class="login-left">
            <div>
                <span class="quote-icon">“</span>
                <blockquote>
                    Education is the passport to the future, for tomorrow belongs to those who prepare for it today.
                </blockquote>
                <p class="mt-3">— Malcolm X</p>
            </div>
        </div>

        <!-- Right Section -->
        <div class="login-right">
            <div class="login-form">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-success">STEMify</h2>
                </div>

                <h5 class="fw-bold text-dark mb-1">Create a New Account</h5>
                <p class="text-muted mb-4" style="font-size: 0.9rem;">
                    Register with your institution email and credentials
                </p>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- Email (Active) -->
                    <div class="mb-3">
                        <input asp-for="Email" class="form-control shadow-sm" placeholder="Email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <input asp-for="Password" class="form-control shadow-sm" placeholder="Password" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="mb-3">
                        <input asp-for="ConfirmPassword" class="form-control shadow-sm" placeholder="Confirm password" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Hidden or Readonly Info Fields -->
                    <input asp-for="InstitutionName" type="hidden" />
                    <input asp-for="FirstName" type="hidden" />
                    <input asp-for="LastName" type="hidden" />
                    <input asp-for="PhoneNumber" type="hidden" />
                    <input asp-for="UserName" type="hidden" />

                    <div class="d-grid mb-2">
                        <button type="submit" class="btn btn-success">Register</button>

                    </div>

                    <div class="text-center mt-2">
                        Already have an account?
                        @Html.ActionLink("Login", "Login", "Account", null, new { @class = "text-success fw-bold" })
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
