@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "List of Users";
}

<h1>List of Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Edit", "Account", new { id = user.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Account", new { id = user.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
