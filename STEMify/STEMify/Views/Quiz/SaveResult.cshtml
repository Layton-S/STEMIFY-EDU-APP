@model QuizResult

<h2>Save Quiz Result</h2>

<form asp-action="SaveResult" method="post">
    <div class="form-group">
        <label asp-for="UserId">User ID</label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="QuizId">Quiz ID</label>
        <input asp-for="QuizId" class="form-control" />
        <span asp-validation-for="QuizId" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="TotalQuestions">Total Questions</label>
        <input asp-for="TotalQuestions" class="form-control" />
        <span asp-validation-for="TotalQuestions" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="CorrectAnswers">Correct Answers</label>
        <input asp-for="CorrectAnswers" class="form-control" />
        <span asp-validation-for="CorrectAnswers" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save Result</button>
</form>