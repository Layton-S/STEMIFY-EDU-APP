@model STEMify.Models.TrueFalseQuestion

@{
    ViewBag.Title = "Add True/False Question";
}
<div id="true-false">

    @Html.HiddenFor(model => model.QuizQuestionId)

    <div class="form-group">
        @Html.LabelFor(model => model.StatementText, htmlAttributes: new { @class = "control-label" })
        @Html.TextAreaFor(model => model.StatementText, new { @class = "form-control", rows = 3 })
        @Html.ValidationMessageFor(model => model.StatementText, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Answer, htmlAttributes: new { @class = "control-label d-block" })

        <div class="form-check form-check-inline">
            @Html.RadioButtonFor(model => model.Answer, true, new { @class = "form-check-input", id = "trueOption" })
            <label class="form-check-label" for="trueOption">True</label>
        </div>

        <div class="form-check form-check-inline">
            @Html.RadioButtonFor(model => model.Answer, false, new { @class = "form-check-input", id = "falseOption" })
            <label class="form-check-label" for="falseOption">False</label>
        </div>

        @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger d-block" })
    </div>
</div>
